<div id="list">
  <ul id="users">
  
</ul>
</div>
      </form>
      <script>
        function register(event){
          event.preventDefault();
          const name =event.target.name.value;
          const mail =event.target.email.value;
          const phone =event.target.phone.value;
          const time =event.target.time.value;
           
          const user={
            name,
            mail,
            phone,
            time
          }
          let obj_serialized = JSON.stringify(user);
          localStorage.setItem(user.name, obj_serialized);   
          dispData(user);

        }
        
        function dispData(user){
          const parnt = document.getElementById('users');
          const child = document.createElement('li');
          child.textContent = user.name+'-'+user.mail+'-'+user.phone+'-'+user.time;
         
          const dltBtn = document.createElement('input');
          dltBtn.type = 'button';
          dltBtn.value = 'remove';
          dltBtn.onclick = () =>
          {
            localStorage.removeItem(user.name);
            parnt.removeChild(child);
          }

          const edtBtn = document.createElement('input');
          edtBtn.type = 'button';
          edtBtn.value = 'edit';

          edtBtn.onclick = () =>
          {
            document.getElementById('name').value = user.name;
            document.getElementById('email').value = user.mail;
            document.getElementById('phone').value = user.phone;
           localStorage.removeItem(user.name);
            parnt.removeChild(child);
          }

          parnt.appendChild(child);
          child.appendChild(dltBtn);
          child.appendChild(edtBtn);
        }
       

      </script>
    
